<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="24dp">

    <EditText
        android:id="@+id/edit_text_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/check_list_hint"
        android:layout_marginTop="4dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/check_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edit_text_check"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/check_list_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        app:srcCompat="@drawable/ic_add_white_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/check_list_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        app:srcCompat="@drawable/ic_delete_forever_white_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="96dp"
        android:layout_marginEnd="24dp" />


</RelativeLayout>